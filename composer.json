{
  "name": "charonlab/charon-framework",
  "description": "",
  "license": "MIT",
  "require": {
    "php": "~8.2.0 || ~8.3.0"
  },
  "require-dev": {
    "charonlab/coding-standard": "1.2.x-dev",
    "phpunit/phpunit": "^11.1.x-dev",
    "vimeo/psalm": "^6.x-dev"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Charon\\Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Charon\\Tests\\Framework\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2.16"
    },
    "sort-packages": true
  },
  "scripts": {
    "lint-check": "phpcs",
    "lint-fix": "phpcbf",
    "static-analysis": "psalm --shepherd --stats",
    "test": "phpunit --colors=always"
  }
}
